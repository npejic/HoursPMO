@model IEnumerable<HoursPMO.ViewModels.ProjectGroup>
@{
    ViewBag.Title = "MonthReportSelect";
}

<h2>Sums for month by projects</h2>

@using (Html.BeginForm())
{ <p> Month: @Html.TextBox("MonthNoSelectedString")  Year: @Html.TextBox("YearSelectedString") <input type="submit" value="Search" /></p> }
<p>

    <table class="table">
        <tr>
            <th>
                Project
                @*@Html.DisplayNameFor(model => model.Project.ProjectName)*@
                @*            ProjectID*@
            </th>
            <th>
                FTO
            </th>
            <th>
                Leaves
            </th>
            <th>
                Possible
            </th>
            <th>
                Actual
            </th>
            <th>
                Billable
            </th>
            <th>
                Working Days
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Project.ProjectName)
                </td>
                <td>
                    @item.FTOSum
                </td>
                <td>
                    @item.LeavesSum
                </td>
                <td>
                    @item.PossibleSum
                </td>
                <td>
                    @item.ActualSum
                </td>
                <td>
                    @item.BillableSum
                </td>
                <td>
                    @item.WorkingDaysSum
                </td>
            </tr>
        }
    </table>
